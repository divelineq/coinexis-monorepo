{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "noImplicitReturns": false,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}