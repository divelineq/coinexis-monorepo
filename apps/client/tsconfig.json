{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,  
    "paths": {
      "@api": [
        "apps/client/src/api"
      ],
      "@features": [
        "apps/client/src/features"
      ],
      "@hooks": [
        "apps/client/src/hooks"
      ],
      "@ui": ["packages/ui/src/index.ts"]

    },
  },
  "references": [{"path": "../../packages/ui/tsconfig.json"}],
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}