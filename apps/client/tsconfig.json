{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": false,
    "rootDir": "./src",
    "baseUrl": "./src",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@ui": [
        "ui"
      ],
      "@api": [
        "api"
      ],
      "@features": [
        "features"
      ],
      "@hooks": [
        "hooks"
      ]
    },
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}