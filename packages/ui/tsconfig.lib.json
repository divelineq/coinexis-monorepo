{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "rootDir": "src",
    "jsx": "react-jsx",
  },
    "exclude": [
    "**/node_modules",
    "out-tsc",
    "dist",
    "vitest.config.ts",
    "vite.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "**/*.test-d.ts",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "src/test-setup.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
}