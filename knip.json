{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    "apps/server": {
      "entry": ["src/server.ts"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"]
    }
  },
  "ignore": [
    "dist/**",
    "build/**",
    "coverage/**",
    "storybook-static/**"
  ],
  "typescript": {
    "project": [
      "tsconfig.base.json",
      "apps/*/tsconfig*.json",
      "packages/*/tsconfig*.json"
    ]
  }
}
