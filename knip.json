{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    "apps/server": {
      "entry": ["src/server.ts"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"]
    },
    "apps/client": {
      "entry": ["src/main.tsx"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"]
    },
    "packages/ui": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.{ts,tsx,js,jsx}"]
    }
  },
  "ignore": [
    "dist/**",
    "build/**",
    "coverage/**",
    "storybook-static/**"
  ],
  "typescript": {
    "project": ["tsconfig.base.json"]
  }
}
