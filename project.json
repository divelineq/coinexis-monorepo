{
   "$schema": "./node_modules/nx/schemas/project-schema.json",
    "targets": {
      "lint": {
        "executor": "nx:noop"
      },
      "start": {
        "executor": "nx:run-commands",
        "options": {
          "commands": [
            "nx serve @coinexis/server",
            "nx serve @coinexis/client"
          ],
          "parallel": true
        }
      },
      "start:client": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nx serve @coinexis/client"
        }
      },
      "start:server": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nx serve @coinexis/server"
        }
      }
    }
}